<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GioiThieu.DangKy"
    android:background="@color/pink_50">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="169dp"
        android:layout_height="39dp"
        android:layout_marginTop="156dp"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Ký"
        android:textColor="@color/orange_300"
        android:textStyle="bold"
        android:textSize="@dimen/label_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Đăng ký tài khoản sẽ giúp bạn sử dụng được đầy đủ tính năng của Pregbe."
        android:textAlignment="center"
        android:textColor="@color/grey_300"
        android:textSize="@dimen/lable_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/edtTen"
        android:layout_width="354dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/input"
        android:drawableStart="@drawable/ic_user_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Họ và tên"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="@color/grey_200"
        android:textSize="@dimen/lable_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="354dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Số điện thoại"
        android:inputType="phone"
        android:padding="10dp"
        android:textColorHint="@color/grey_200"
        android:textSize="@dimen/lable_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTen" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="354dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input"
        android:drawableStart="@drawable/ic_key"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="@color/grey_200"
        android:textSize="@dimen/lable_4"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPhone"
        tools:ignore="MissingConstraint"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dangky"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/button_orange300"
        android:gravity="center"
        android:text="Đăng ký"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/lable_4"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.192" />


</androidx.constraintlayout.widget.ConstraintLayout>